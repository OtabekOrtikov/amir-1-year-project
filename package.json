{
  "name": "amir-1-year-project",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile": "sass --no-source-map src/styles/style.scss:src/dist/style.css",
    "compile:watch": "sass --no-source-map --watch src/styles/style.scss:src/dist/style.css",
    "minify:css": "postcss src/dist/style.css --use autoprefixer --use cssnano --output src/dist/style.min.css",
    "lint": "stylelint 'src/styles/**/*.scss'",
    "html-validate": "html-validate src/index.html",
    "unused:css": "purgecss --css src/dist/style.css --content src/index.html --output src/dist/ --rejected",
    "prod": "npm run html-validate && npm run compile && npm run minify:css && npm run unused:css && npm run lint"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "autoprefixer": "^10.4.17",
    "clean-css-cli": "^5.6.3",
    "cssnano": "^6.0.3",
    "html-validate": "^8.7.4",
    "jest": "29.7",
    "jest-junit": "^13.2.0",
    "jsdom": "^19.0.0",
    "parse-gitignore": "^2.0.0",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "prefixer": "^0.0.3",
    "prettier": "^3.1.1",
    "purgecss": "^7.0.2",
    "purify-css": "^1.2.5",
    "sass": "^1.89.2",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^35.0.0",
    "stylelint-scss": "^6.0.0"
  }
}
